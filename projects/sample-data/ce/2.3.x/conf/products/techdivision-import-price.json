{
  "magento-edition": "CE",
  "magento-version": "2.3.0",
  "operation-name" : "add-update",
  "source-dir" : "projects/sample-data/tmp",
  "target-dir" : "projects/sample-data/tmp",
  "archive-artefacts" : true,
  "debug-mode" : false,
  "entity-type-code" : "catalog_product_price",
  "listeners" : [
    {
      "app.set.up" : [
        "import.listener.render.ansi.art",
        "import.listener.initialize.registry"
      ]
    },
    {
      "app.tear.down" : [
        "import.listener.clear.registry"
      ]
    }
  ],
  "databases" : [
    {
      "id": "docker",
      "default" : true,
      "pdo-dsn": "mysql:host=127.0.1.4:9306;dbname=magento;charset=utf8",
      "username": "magento",
      "password": "magento"
    }
  ],
  "loggers": [
    {
      "name": "system",
      "channel-name": "logger/system",
      "type": "Monolog\\Logger",
      "handlers": [
        {
          "type": "Monolog\\Handler\\ErrorLogHandler",
          "formatter": {
            "type": "Monolog\\Formatter\\LineFormatter",
            "params" : [
              {
                "format": "[%datetime%] %channel%.%level_name%: %message% %context% %extra%",
                "date-format": "Y-m-d H:i:s",
                "allow-inline-line-breaks": true,
                "ignore-empty-context-and-extra": true
              }
            ]
          }
        }
      ],
      "processors": [
        {
          "type": "Monolog\\Processor\\MemoryPeakUsageProcessor"
        }
      ]
    }
  ],
  "operations" : [
    {
      "name" : "add-update",
      "plugins" : [
        {
          "id": "import.plugin.global.data"
        },
        {
          "id": "import.plugin.subject",
          "subjects": [
            {
              "id": "import.subject.move.files",
              "identifier": "move-files",
              "file-resolver": {
                "prefix": "product-import-price"
              },
              "ok-file-needed": true
            },
            {
              "id": "import_product.subject.bunch",
              "identifier": "files",
              "file-resolver": {
                "prefix": "product-import-price"
              },
              "observers": [
                {
                  "import": [
                    "import_product.observer.composite.price.add_update"
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "import.plugin.archive"
        }
      ]
    }
  ]
}